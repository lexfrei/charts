{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Eclipse EDC Helm Chart Values",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the chart name"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full release name"
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": ["name"]
      },
      "description": "Image pull secrets for private registries"
    },
    "connector": {
      "type": "object",
      "description": "Unified connector configuration",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of connector replicas"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "description": "Connector image repository"
            },
            "tag": {
              "type": "string",
              "description": "Connector image tag (defaults to appVersion)"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"],
              "default": "IfNotPresent",
              "description": "Image pull policy"
            }
          }
        },
        "ports": {
          "type": "object",
          "properties": {
            "default": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Default API port"
            },
            "management": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Management API port"
            },
            "protocol": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Protocol (DSP) port for connector-to-connector communication"
            },
            "public": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Public API port for data transfer"
            },
            "control": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Control API port"
            }
          }
        },
        "config": {
          "type": "object",
          "description": "EDC configuration",
          "properties": {
            "participantId": {
              "type": "string",
              "description": "Participant ID for this connector (REQUIRED - must be set at install time)"
            },
            "hostname": {
              "type": "string",
              "description": "Public hostname for DSP callback (REQUIRED for external access)"
            },
            "tokenSignerPrivateKeyAlias": {
              "type": "string",
              "description": "Token signer private key alias in vault"
            },
            "tokenVerifierPublicKeyAlias": {
              "type": "string",
              "description": "Token verifier public key alias in vault"
            }
          },
          "required": ["participantId"]
        },
        "env": {
          "type": "array",
          "description": "Additional environment variables",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "valueFrom": {
                "type": "object"
              }
            },
            "required": ["name"]
          }
        },
        "resources": {
          "type": "object",
          "description": "Resource requests and limits",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" }
              }
            }
          }
        },
        "nodeSelector": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Node selector for pod assignment"
        },
        "tolerations": {
          "type": "array",
          "description": "Tolerations for pod assignment",
          "items": {
            "type": "object",
            "properties": {
              "key": { "type": "string" },
              "operator": { "type": "string" },
              "value": { "type": "string" },
              "effect": { "type": "string" },
              "tolerationSeconds": { "type": "integer" }
            }
          }
        },
        "affinity": {
          "type": "object",
          "description": "Affinity rules for pod assignment"
        },
        "podAnnotations": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Annotations to add to pods"
        },
        "podLabels": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Labels to add to pods"
        },
        "serviceAccount": {
          "type": "object",
          "properties": {
            "create": {
              "type": "boolean",
              "description": "Create a service account"
            },
            "annotations": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "Service account annotations"
            },
            "name": {
              "type": "string",
              "description": "Service account name (generated if not set)"
            }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"],
              "default": "ClusterIP",
              "description": "Service type"
            },
            "annotations": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "Service annotations"
            }
          }
        }
      },
      "required": ["config"]
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context",
      "properties": {
        "runAsNonRoot": { "type": "boolean" },
        "runAsUser": { "type": "integer" },
        "runAsGroup": { "type": "integer" },
        "fsGroup": { "type": "integer" },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RuntimeDefault", "Unconfined", "Localhost"],
              "description": "Seccomp profile type"
            },
            "localhostProfile": {
              "type": "string",
              "description": "Localhost profile path (required if type is Localhost)"
            }
          }
        }
      }
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context",
      "properties": {
        "allowPrivilegeEscalation": { "type": "boolean" },
        "readOnlyRootFilesystem": { "type": "boolean" },
        "runAsNonRoot": { "type": "boolean" },
        "runAsUser": { "type": "integer" },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": { "type": "string" }
            },
            "add": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "ingress": {
      "type": "object",
      "description": "Ingress configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress"
        },
        "className": {
          "type": "string",
          "description": "Ingress class name"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Ingress annotations"
        },
        "hosts": {
          "type": "array",
          "description": "Ingress hosts configuration",
          "items": {
            "type": "object",
            "properties": {
              "host": { "type": "string" },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": { "type": "string" },
                    "pathType": {
                      "type": "string",
                      "enum": ["Prefix", "Exact", "ImplementationSpecific"]
                    },
                    "port": { "type": "string" }
                  },
                  "required": ["path", "pathType", "port"]
                }
              }
            },
            "required": ["host", "paths"]
          }
        },
        "tls": {
          "type": "array",
          "description": "Ingress TLS configuration",
          "items": {
            "type": "object",
            "properties": {
              "secretName": { "type": "string" },
              "hosts": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "httpRoute": {
      "type": "object",
      "description": "HTTPRoute configuration (Gateway API)",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable HTTPRoute"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "HTTPRoute annotations"
        },
        "parentRefs": {
          "type": "array",
          "description": "Parent gateway references",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "namespace": { "type": "string" },
              "sectionName": { "type": "string" }
            },
            "required": ["name"]
          }
        },
        "hostnames": {
          "type": "array",
          "description": "Hostnames for the route",
          "items": { "type": "string" }
        },
        "rules": {
          "type": "array",
          "description": "Routing rules",
          "items": {
            "type": "object",
            "properties": {
              "matches": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "value": { "type": "string" }
                      }
                    },
                    "headers": { "type": "array" },
                    "queryParams": { "type": "array" },
                    "method": { "type": "string" }
                  }
                }
              },
              "filters": { "type": "array" },
              "port": {
                "type": "integer",
                "description": "Service port to route to"
              },
              "weight": {
                "type": "integer",
                "description": "Traffic weight"
              }
            },
            "required": ["matches", "port"]
          }
        }
      }
    }
  },
  "required": ["connector"]
}
